{
  "name": "build-skill",
  "version": "1.1.0",
  "description": "Scaffold AI agent skills quickly with the Build Skill CLI.",
  "keywords": [
    "ai",
    "ai-sdk",
    "agent",
    "skills",
    "tools"
  ],
  "homepage": "https://github.com/Flash-Brew-Digital/build-skill",
  "bugs": {
    "url": "https://github.com/Flash-Brew-Digital/build-skill/issues"
  },
  "license": "MIT",
  "author": {
    "name": "Ben Sabic",
    "url": "https://bensabic.dev"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Flash-Brew-Digital/build-skill.git"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "build-skill": "./dist/index.js"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "template",
    "README.md"
  ],
  "type": "module",
  "scripts": {
    "build": "tsup",
    "test": "vitest run",
    "prepublishOnly": "pnpm build",
    "check": "ultracite check",
    "fix": "ultracite fix",
    "bump-deps": "npx npm-check-updates -u -p pnpm && pnpm install",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@clack/prompts": "^1.0.0",
    "commander": "^14.0.3",
    "execa": "^9.6.1",
    "picocolors": "^1.1.1"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.13",
    "@types/node": "^25.2.2",
    "lint-staged": "^16.2.7",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3",
    "ultracite": "7.1.5",
    "vitest": "^4.0.18"
  },
  "engines": {
    "node": ">=20"
  },
  "packageManager": "pnpm@10.29.2",
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,jsonc,css,scss,md,mdx}": [
      "pnpm dlx ultracite fix"
    ]
  }
}
